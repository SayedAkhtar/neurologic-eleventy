<section class="contact-form">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-12">
        <h1 class="heading-1 with-dots">Lets Work Together</h1>
      </div>
    </div>
    <form action="" class="query-form">
      <div class="row">
        <div class="col-md-6 com-sm-12">
          <div class="row">
            <div class="col-12">
              <div class="mb-3">
                <label class="form-label">How can we help?</label>
                <input
                name="query"
                  type="text"
                  class="form-control"
                  aria-describedby="How can we help"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <div class="mb-3">
                <label class="form-label">First Name</label>
                <input
                name="first_name"
                  type="text"
                  class="form-control"
                  aria-describedby="How can we help"
                />
              </div>
            </div>
            <div class="col-6">
              <div class="mb-3">
                <label class="form-label">Last Name</label>
                <input
                name="last_name"
                  type="text"
                  class="form-control"
                  aria-describedby="How can we help"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <div class="mb-3">
                <label class="form-label">Email</label>
                <input
                name="email"
                  type="email"
                  class="form-control"
                  aria-describedby="How can we help"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <div class="mb-3">
                <label class="form-label">Telephone</label>
                <input
                name="phone"
                  type="text"
                  class="form-control"
                  aria-describedby="How can we help"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <div class="mb-3">
                <label class="form-label">Company</label>
                <input
                name="company"
                  type="text"
                  class="form-control"
                  aria-describedby="How can we help"
                />
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-sm-12">
            <div class="row">
            <div class="col-12">
              <div class="mb-3">
                <label class="form-label">Telephone</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="8"></textarea>
              </div>
            </div>
          </div>
            <div class="row">
            <div class="col-12">
              <div class="mb-3">
                <label class="form-label">How did you hear about us ?</label>
                <input
                name="refferal"
                  type="text"
                  class="form-control"
                  aria-describedby="How did you hear about us"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 col-md-6 offset-md-6">
            <button class="btn btn-submit">Connect us</button>
        </div>
      </div>
    </form>
  </div>
</section>
